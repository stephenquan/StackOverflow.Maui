<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SO79725472.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SO79725472"
    Title="Home"
    BackgroundColor="SkyBlue"
    Shell.ForegroundColor="Red"
    Shell.TabBarForegroundColor="Yellow"
    Shell.TabBarTitleColor="Green"
    Shell.TabBarUnselectedColor="Orange"
    Shell.TitleColor="Lime">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="Orange" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="TextColor" Value="Orange" />
            </Style>
            <Style TargetType="SearchBar">
                <Setter Property="TextColor" Value="Orange" />
            </Style>
            <Style TargetType="SearchHandler">
                <Setter Property="TextColor" Value="Orange" />
            </Style>
            <Style ApplyToDerivedTypes="True" TargetType="Shell">
                <Setter Property="Shell.BackgroundColor" Value="Orange" />
                <Setter Property="Shell.ForegroundColor" Value="Orange" />
                <Setter Property="Shell.TitleColor" Value="Orange" />
                <Setter Property="Shell.DisabledColor" Value="Orange" />
                <Setter Property="Shell.UnselectedColor" Value="Orange" />
                <Setter Property="Shell.NavBarHasShadow" Value="False" />
                <Setter Property="Shell.TabBarBackgroundColor" Value="Orange" />
                <Setter Property="Shell.TabBarForegroundColor" Value="Orange" />
                <Setter Property="Shell.TabBarTitleColor" Value="Orange" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="Orange" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem
            x:Name="AddNewDictionary"
            Order="Primary"
            Priority="0">
            <ToolbarItem.Text>Dictionaries</ToolbarItem.Text>
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="Font Awesome 7"
                    Glyph="{x:Static local:FontAwesome7.SquarePlus}"
                    Size="70"
                    Color="{AppThemeBinding Light={StaticResource Black},
                                            Dark={StaticResource White}}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a hovercraft number nine"
                Source="dotnet_bot.png" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="25">
                <Image HeightRequest="35" WidthRequest="35">
                    <Image.Source>
                        <FontImageSource
                            FontFamily="Font Awesome 7"
                            Glyph="{x:Static local:FontAwesome7.SquarePlus}"
                            Size="17"
                            Color="{AppThemeBinding Light={StaticResource Black},
                                                    Dark={StaticResource White}}" />
                    </Image.Source>
                </Image>

                <Image HeightRequest="35" WidthRequest="35">
                    <Image.Source>
                        <FontImageSource
                            FontFamily="Font Awesome 7"
                            Glyph="{x:Static local:FontAwesome7.SquarePlus}"
                            Size="35"
                            Color="{AppThemeBinding Light={StaticResource Black},
                                                    Dark={StaticResource White}}" />
                    </Image.Source>
                </Image>

                <Image HeightRequest="35" WidthRequest="35">
                    <Image.Source>
                        <FontImageSource
                            FontFamily="Font Awesome 7"
                            Glyph="{x:Static local:FontAwesome7.SquarePlus}"
                            Size="70"
                            Color="{AppThemeBinding Light={StaticResource Black},
                                                    Dark={StaticResource White}}" />
                    </Image.Source>
                </Image>
            </HorizontalStackLayout>

            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Hello, World!" />

            <Label
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                SemanticProperties.HeadingLevel="Level2"
                Style="{StaticResource SubHeadline}"
                Text="Welcome to &#10;.NET Multi-platform App UI" />

            <Button
                x:Name="CounterBtn"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Counts the number of times you click"
                Text="Click me" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
