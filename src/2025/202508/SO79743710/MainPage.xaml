<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SO79743710.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SO79743710"
    x:DataType="local:GPSViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <VerticalStackLayout
                x:DataType="local:SerialDevice"
                BindingContext="{Binding CurrentDevice}"
                Spacing="20">

                <Label Text="{Binding BaudRate, StringFormat='BaudRate: {0}'}" />

                <Picker ItemsSource="{Binding BaudRateSource}" SelectedItem="{Binding BaudRate, Mode=TwoWay}" />

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
