<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SO79735735.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SO79735735"
    x:DataType="local:MainPage">
    <CollectionView
        EmptyView="No Data"
        ItemSizingStrategy="MeasureFirstItem"
        ItemsSource="{Binding Items}"
        SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="local:ItemModel">
                <VerticalStackLayout>
                    <Grid
                        Padding="8,8,8,8"
                        ColumnDefinitions="2*, *, *"
                        HeightRequest="40"
                        RowSpacing="8">
                        <Label
                            Grid.Column="0"
                            FontSize="12"
                            HorizontalOptions="Start"
                            Text="{Binding Name}"
                            VerticalOptions="Center" />
                        <Label
                            Grid.Column="1"
                            FontSize="12"
                            HorizontalOptions="End"
                            Text="{Binding Name2}"
                            VerticalOptions="Center" />
                        <Label
                            Grid.Column="2"
                            FontSize="12"
                            HorizontalOptions="End"
                            Text="{Binding Count, StringFormat='{}{0:G}'}"
                            VerticalOptions="Center" />
                    </Grid>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
