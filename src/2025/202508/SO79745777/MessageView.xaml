<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SO79745777.MessageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SO79745777"
    x:Name="messageView">
    <Border
        Padding="5"
        x:DataType="local:MessageView"
        BindingContext="{Reference messageView}">
        <VerticalStackLayout Spacing="25">
            <Entry Text="{Binding Message, Mode=TwoWay}" />
            <Button Command="{Binding Command}" Text="Send" />
        </VerticalStackLayout>
    </Border>
</ContentView>
