<?xml version="1.0" encoding="utf-8" ?>
<Image
    x:Class="SO79696605.MyImage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SO79696605"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="myImage">
    <Image.Behaviors>
        <toolkit:TouchBehavior
            x:DataType="local:MyImage"
            BindingContext="{x:Reference myImage}"
            LongPressCommand="{Binding LongPressedCommand}"
            LongPressCommandParameter="{Binding LongPressedCommandParameter}" />
    </Image.Behaviors>
</Image>
