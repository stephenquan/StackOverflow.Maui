<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StackOverflow.Maui.App.SO77928546.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MainPage">

    <Grid x:Name="topLevelContainer">
        <ScrollView>
            <VerticalStackLayout Padding="30,30,30,30" Spacing="25">
                <Image
                    Aspect="AspectFit"
                    HeightRequest="185"
                    SemanticProperties.Description="dot net bot in a submarine number ten"
                    Source="dotnet_bot.png" />

                <Label
                    SemanticProperties.HeadingLevel="Level1"
                    Style="{StaticResource Headline}"
                    Text="Hello, World!" />

                <Label
                    SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                    SemanticProperties.HeadingLevel="Level2"
                    Style="{StaticResource SubHeadline}"
                    Text="Welcome to &#10;.NET Multi-platform App UI" />

                <Button
                    x:Name="CounterBtn"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Fill"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="Click me" />

                <!--<Button Clicked="OnShowBottomSheet" Text="Show BottomSheet" />-->

            </VerticalStackLayout>
        </ScrollView>

        <Border
            x:Name="bottomSheetView"
            Padding="5"
            BackgroundColor="#eee"
            HorizontalOptions="Fill"
            StrokeShape="RoundRectangle 25,25,0,0"
            VerticalOptions="End">
            <VerticalStackLayout Spacing="10">
                <Label HorizontalOptions="Center" Text="Bottom Sheet Header" />
                <ContentView BackgroundColor="#ffe" HeightRequest="80">
                    <Label
                        HorizontalOptions="Center"
                        Text="Bottom Sheet Contents"
                        VerticalOptions="Center" />
                </ContentView>
            </VerticalStackLayout>
        </Border>
    </Grid>

</ContentPage>
