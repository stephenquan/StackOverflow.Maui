<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage
    x:Class="StackOverflow.Maui.App.SO79772080.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StackOverflow.Maui.App"
    xmlns:so79772080="clr-namespace:StackOverflow.Maui.App.SO79772080"
    x:DataType="so79772080:MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="Blue">
            <Label Text="Hello!" />
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1">
            <so79772080:MyImage
                x:Name="_imgMap"
                Aspect="AspectFit"
                Source="dotnet_bot.png" />
        </Grid>
        <Label
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="Orange"
            Text="World" />
        <Border
            Grid.Column="1"
            Padding="10,0,10,10"
            BackgroundColor="Black"
            HorizontalOptions="End"
            Stroke="Black"
            VerticalOptions="End">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <VerticalStackLayout
                HorizontalOptions="End"
                Spacing="0"
                VerticalOptions="End">
                <Button
                    x:Name="_btnZoomIn"
                    Padding="0,0,0,0"
                    BackgroundColor="Black"
                    Clicked="OnZoomInClicked"
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="+"
                    TextColor="White" />
                <Button
                    x:Name="_btnZoomOut"
                    Padding="0,0,0,0"
                    BackgroundColor="Black"
                    Clicked="OnZoomOutClicked"
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="-"
                    TextColor="White" />
            </VerticalStackLayout>
        </Border>
    </Grid>

</local:BasePage>
